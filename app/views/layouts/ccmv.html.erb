<% @base_title = 'CCMV Sermon Archive' %>
<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= render 'layouts/stylesheets' %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class="bp ccmv" id="main_body">
  <div class='container' id='container'>

    <div id='content'>
      <div id='header'>
        <%= render 'layouts/ccmv_header' %>
      </div>
      <%= yield %>
      <div id='footer'>
        <%= render 'layouts/ccmv_footer' %>
      </div>
    </div>

  </div>
  <h1>CCMV Layout</h1>
  <%= debug(params) if Rails.env.development? %>
</body>
</html>
